# Application Configuration
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://sage_mcp:password@localhost:5432/sage_mcp

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security (SECRET_KEY is required -- min 16 chars)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags (all default to false)
# SAGEMCP_ENABLE_SERVER_POOL=true
# SAGEMCP_ENABLE_SESSION_MANAGEMENT=true
# SAGEMCP_ENABLE_METRICS=true
# SAGEMCP_ENABLE_AUTH=true

# Auth bootstrap -- set a platform admin API key on first startup (optional)
# SAGEMCP_BOOTSTRAP_ADMIN_KEY=smcp_pa_your-bootstrap-key

# Base URL for OAuth redirects
BASE_URL=http://localhost:8000

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Configuration - Slack
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# OAuth Configuration - Google Docs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DOCS_SCOPES=https://www.googleapis.com/auth/documents https://www.googleapis.com/auth/drive.readonly https://www.googleapis.com/auth/drive.file

# OAuth Configuration - Jira
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret

# MCP Configuration
MCP_SERVER_TIMEOUT=30
MCP_MAX_CONNECTIONS_PER_TENANT=10